<h2><u><b>Edit Stylist Details</u></b></h2>
<form class="form-horizontal" action="/stylists/$stylist.getId()/edit" method="post">
    <div class="form-group">
     <label class="control-label col-sm-2" for="name">Name:</label>
     <div class="col-sm-10">
       <input type="text" class="form-control" id="name" name ="name"  value="$stylist.getName()">

        <button type="submit" class="btn btn-default">Update</button>
     </div>
    </div>
</form>
